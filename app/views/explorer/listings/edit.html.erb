<% provide(:title , 'Edit Listing' ) %>

<div class="col-md-4 col-md-offset-4">
	<h1>Edit directory listing</h1>
	<hr/>
	<%= simple_form_for @listing, :html => {:multipart => true} do |f| %>	
		<%= render :partial=> 'form', :locals=>{f: f} %>
		<hr/>
		<p><%= f.submit 'Edit Listing', :class=>'btn btn-primary btn-block' %></p>
	<% end %>
  <p class="text-center"><%= link_to 'Back to Organization', organizer_path(@listing.organizer) %></p>
</div>

<div class="spacer"></div>