<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
	  <title> <%= full_title(yield(:title)) %> </title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="<%= yield(:description) %>">
    <!--FACEBOOK-->
    <meta property="og:title" content="<%= full_title(yield(:title)) %>">
    <link rel="canonical" href="<%= default_url(yield(:url)) %>"> 
    <meta property="og:site_name" content="Black Tech Event Calendar">
    <meta property="og:url" content="<%= default_url(yield(:url)) %>">
    <meta property="og:description" content="<%= default_description(yield(:description))%>">
    <meta property="og:image" content="<%= default_image(yield(:image)) %>">
    <meta property="og:type" content="website">
    <meta property="og:locale" content="en_US">
    <!--TWITTER-->
    <meta property="twitter:card" content="summary">
    <meta property="twitter:title" content="<%= full_title(yield(:title)) %>">
    <meta property="twitter:description" content="<%= default_description(yield(:description))%>">
    <meta property="twitter:site" content="@<%= default_twitter(yield(:twitter))%>">
    <meta property="twitter:url" content="<%= default_url(yield(:url)) %>">
    <meta property="twitter:image" content="<%= default_image(yield(:image)) %>">

	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" >
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" ></script>
  	<link href='https://fonts.googleapis.com/css?family=Signika:400,600,700,300' rel='stylesheet' type='text/css'>
		<%= stylesheet_link_tag    'explorer/application', media: 'all' %>
		<%= favicon_link_tag %>
	  <%= javascript_include_tag 'explorer/application' %>
     <script src="//maps.google.com/maps/api/js?key=AIzaSyDXYWw4R9xIVBMIXxJ5i4rd0xIcheH5svs"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> 
  	<%= csrf_meta_tags %>
</head>
<body class="twb-body">
	
		
			<nav class="navbar navbar-default">
		  <div class="container-fluid">
		    <!-- Brand and toggle get grouped for better mobile display -->
		    <div class="navbar-header">
		      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
		        <span class="sr-only">Toggle navigation</span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		      </button>
		      <%= link_to root_url, :class=>'navbar-brand' do %>
		      	<%= image_tag 'explorer/logo.png' %>
		      <% end %>
		    </div>

		    <!-- Collect the nav links, forms, and other content for toggling -->
		    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-left">
            <li class="dropdown">
              <%= link_to edit_user_path(current_user), :class=> "dropdown-toggle" , :data=> {:toggle=>'dropdown'} do %>
                <span title='Switch', data-toggle= 'tooltip', data-placement='bottom'>
                  <i class='fa fa-refresh fa-lg'></i>
              <% end %>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to 'Community', main_app.root_path %>
                </li>
                <!-- <li>
                  <%= link_to 'Market', market.root_path %>
                </li> -->
              </ul>
            </li>
          </ul>
		      <ul class="nav navbar-nav navbar-right">
             
		      	<li>
              <%= link_to new_event_path do %>
                <i class="fa fa-plus"></i>
                Add Event
              <% end %>
            </li>
		      	<li>
              <%= link_to events_path do %>
                <i class="fa fa-calendar"></i>
                Events
              <% end %>
            </li>
            <li>
              <%= link_to listings_path do %>
                <i class="fa fa-flag"></i>
                Directory
              <% end %>
            </li>
            <li>
              <%= link_to my_events_path do %>
                <i class="fa fa-gear"></i>
                Manage
              <% end %>
            </li>
		      	<!-- <li><%= link_to 'My Tickets', my_tickets_path if user_signed_in? %></li> -->
            <li class="dropdown">
              <%= link_to edit_user_path(current_user), :class=> "dropdown-toggle" , :data=> {:toggle=>'dropdown'} do %>
                <span title='Account', data-toggle= 'tooltip', data-placement='bottom'>
                  <i class='fa fa-user fa-lg'></i>
                  <span> <%= current_user.name %></span>
                  <span class="caret"></span></span>
              <% end %>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to 'Notifications', main_app.notifications_path %>
                </li>
                <li>
                  <%= link_to 'Messages', main_app.conversations_path %>
                </li>
                <li>
                  <%= link_to 'View Profile', main_app.user_path(current_user) %>
                </li>
                <li>
                  <%= link_to 'Edit Profile', main_app.edit_user_path(current_user) %>
                </li>
                <li>
                  <%= link_to 'Manage Account', main_app.manage_account_path %>
                </li>
                <li>
                  <%= link_to 'Logout', main_app.logout_path %>
                </li>
              </ul>
            </li>
		      </ul>
		    </div><!-- /.navbar-collapse -->
		  </div><!-- /.container-fluid -->
		</nav>
	